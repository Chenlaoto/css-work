/* pages/index/search/search.wxss */
page {
    background-color: #efeff3;
}
/* 搜索框 */
.searchContainer {
    /* padding: 20rpx; */
}
.searchBox {
    position: relative;
    margin: 20rpx;
}
.search {
    border-radius: 30rpx;
    padding-left: 60rpx;
    margin-right: 80rpx;
    height: 60rpx;
    font-size: 24rpx;
    border: 2rpx solid rgb(194, 194, 194);
    background-color: #fff;
}
.searchImg {
    position: absolute;
    top: 16rpx;
    left: 20rpx;
    width: 32rpx;
    height: 32rpx;
}
.searchText {
    position: absolute;
    top: 8rpx;
    right: 0;
    /* color: #FF6A6A; */
}
/* 历史搜索 */
.searchHistory {
    padding: 30rpx 20rpx 0 20rpx;
    border-radius: 12rpx 12rpx 0 0;
    /* width: 100%; */
    height: 300rpx;
    background-color: #fff;
}
.historyTitle {
    display: flex;
    justify-content: space-between;
    margin-bottom: 20rpx;
}
.delect_img {
    width: 32rpx;
    height: 32rpx;
}
.tip {
    display: inline-block;
    padding: 4rpx 16rpx;
    border-radius: 10rpx;
    background-color: #f5f7f9;
}